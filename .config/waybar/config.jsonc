{
    "layer": "top",
    "position": "top",
    "margin-top": 4,
    "margin-bottom": 0,
    "margin-left": 10,
    "margin-right": 10,
    "spacing": 8, // Gaps between modules (8px)

    "modules-left": [
        "clock#date",
        "wireplumber",
        "tray",
        "wlr/taskbar"
    ],
    "modules-center": [
        "niri/workspaces"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "network",
        "custom/weather",
        "custom/power"
    ],
    "clock#date": {
        "format": "{:%H:%M %m-%d %a}", // Icon: calendar-alt
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#eebebe'><b>{}</b></span>",
                "days": "<span color='#ffe6ff'><b>{}</b></span>",
                "weeks": "<span color='#c6a0f6'><b>W{}</b></span>",
                "weekdays": "<span color='#eebebe'><b>{}</b></span>",
                "today": "<span color='#ed8796'><b><u>{}</u></b></span>"
            }
        },
        "justify": "center"
    },

    "wlr/taskbar": {
        "format": "{icon} ",
        "tooltip-format": "{title} | {app_id}",
        "icon-size": 20,
        "spacing": 10,
        "all-outputs": true,
        "on-click": "activate",
        "on-click-middle": "close",
        // "on-click-right": "fullscreen"
    },
    "niri/language": {
        "format": "{short}",
    },
    "wireplumber": {
        "on-click": "pavucontrol",
        "on-click-right": "amixer sset Master toggle 1>/dev/null",
        "on-scroll-down": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05-",
        "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05+",
        "format": "{icon} {volume}%",
        "format-source": "ÔÑ∞ ",
        "format-source-muted": "ÔÑ± ",
        "format-muted": "<span foreground='#fab387'>Ôë¶  MUT</span>",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Ôäî ",
            "headset": "Ôäî ",
            "phone": "ÔÇï ",
            "portable": "ÔÇï ",
            "car": "ÔÜπ ",
            "default": "ÔÄ® "
          // "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
        "justify": "center"
    },
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },
    "custom/weather": {
        "format": "{} ¬∞",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar --location enshi --hide-conditions",
        "return-type": "json",
        "on-click": "yad --html --uri='https://wttr.in/enshi' --center --fixed --width=1000 --height=680 --timeout=60 --timeout-indicator=right"
    },
    "niri/workspaces": {
        // "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "1": "‰∏Ä",
            "2": "‰∫å",
            "3": "‰∏â",
            "4": "Âõõ",
            "5": "‰∫î",
            "6": "ÂÖ≠",
            "7": "‰∏É",
            "8": "ÂÖ´",
            "9": "‰πù",
            "10": "ÂçÅ",
        },
        "sort-by-number": true,
        "active-only": false,
        "justify": "center",
    },
    "cpu": {
        "format": "Ôãõ  {usage}% {max_frequency:0.1f}GHz",
        "on-click": "kitty -e btop",
        "interval": 3,
        "justify": "center",
        "tooltip": false
        //"max-length": 14,
        //"min-length": 14,
    },
    "memory": {
        "format": "ÔÉâ  {used:0.1f}G",
        "interval": 3,
        "justify": "center",
        "tooltip": false
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)",
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö† ",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        }
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/power": {
        "format" : "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/modules/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    }
}
